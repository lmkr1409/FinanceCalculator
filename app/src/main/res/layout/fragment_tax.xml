        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="@+id/guideline"
        app:layout_constraintTop_toBottomOf="@+id/label_80cc"
        app:layout_constraintVertical_bias="0.011" />

    <EditText
        android:id="@+id/field_hip"
        android:layout_width="120dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:layout_marginBottom="5dp"
        android:autofillHints=""
        android:background="@drawable/input_field"
        android:hint="VI A"
        android:inputType="numberDecimal"
        android:labelFor="@id/label_hip"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.764"
        app:layout_constraintStart_toEndOf="@+id/label_hip"
        app:layout_constraintTop_toBottomOf="@+id/field_80cc"
        app:layout_constraintVertical_bias="0.0"
        tools:ignore="LabelFor" />

    <TextView
        android:id="@+id/label_hra"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="15dp"
        android:text="@string/tax_deduction_hra"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="@+id/guideline"
        app:layout_constraintTop_toBottomOf="@+id/label_hip"
        app:layout_constraintVertical_bias="0.004" />

    <EditText
        android:id="@+id/field_hra"
        android:layout_width="120dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:layout_marginBottom="5dp"
        android:autofillHints=""
        android:background="@drawable/input_field"
        android:hint="HRA"
        android:inputType="numberDecimal"
        android:labelFor="@id/label_hra"
        app:layout_constraintBottom_toBottomOf="parent"
