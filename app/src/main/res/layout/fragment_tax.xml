        android:autofillHints=""
        android:background="@drawable/input_field"
        android:hint="80C"
        android:inputType="numberDecimal"
        android:labelFor="@id/label_80c"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.78"
        app:layout_constraintStart_toEndOf="@+id/label_80c"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.194"
        tools:ignore="LabelFor" />

    <TextView
        android:id="@+id/label_80cc"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:layout_marginBottom="6dp"
        android:text="@string/tax_deduction_80CC"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="@+id/guideline"
        app:layout_constraintTop_toBottomOf="@+id/label_80c"
        app:layout_constraintVertical_bias="0.014" />

    <EditText
        android:id="@+id/field_80cc"
        android:layout_width="120dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:layout_marginBottom="5dp"
        android:autofillHints=""
        android:background="@drawable/input_field"
        android:hint="80CC"
        android:inputType="numberDecimal"
        android:labelFor="@id/label_80cc"
